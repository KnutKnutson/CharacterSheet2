<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    android:layout_marginTop="@dimen/content_margin"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/list_header_height"
        android:layout_height="@dimen/list_header_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spellSlotLevel"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_size_title"
            android:gravity="center_vertical"
            android:text="9"
            android:translationX="10px"
            />

        <ImageView
            android:layout_width="@dimen/list_header_height"
            android:layout_height="@dimen/list_header_height"
            android:layout_gravity="center_vertical"
            android:id="@+id/spellSlotTriangle"
            android:elevation="4dp"
            android:background="@drawable/ic_chevron_right_24dp"/>
    </FrameLayout>

    <EditText
        style="@style/BaseEditTextView"
        android:id="@+id/slotsTotal"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:hint="@string/label_slots_total"
        android:layout_weight="1" />

    <EditText
        style="@style/BaseEditTextView"
        android:id="@+id/slotsExpended"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:hint="@string/label_slots_expended"
        android:layout_weight="1"/>

</LinearLayout>
