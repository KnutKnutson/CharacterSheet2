<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    android:layout_marginTop="@dimen/content_margin"
    android:layout_marginStart="@dimen/content_margin"
    android:padding="4dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/spellSlotLevel"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/font_size_title"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/content_margin"
        android:text="9"
        />

    <ImageView
        android:layout_width="@dimen/list_header_height"
        android:layout_height="@dimen/list_header_height"
        android:layout_gravity="center_vertical"
        android:id="@+id/spellSlotTriangle"
        android:layout_margin="4dp"
        android:elevation="4dp"
        android:background="@drawable/ic_chevron_right_24dp"/>

    <EditText
        style="@style/BaseEditTextView"
        android:id="@+id/slotsTotal"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:layout_weight="1" />

    <EditText
        style="@style/BaseEditTextView"
        android:id="@+id/slotsExpended"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:layout_weight="1"/>

</LinearLayout>
