<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="74dp"
    android:background="@drawable/rectangle"
    android:elevation="4dp"
    android:layout_margin="@dimen/content_margin">

    <TextView
        style="@style/BaseTextView"
        android:layout_width="match_parent"
        android:id="@+id/label_items"
        android:text="@string/label_items"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/content_margin"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/content_margin"
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_marginRight="@dimen/content_margin"
        android:layout_below="@+id/label_items"
        android:id="@id/android:list"
        tools:listitem="@android:layout/simple_list_item_checked" />

    <!-- TODO: animate button to save space when list is empty. remove minheight on root layout -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/items_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        app:fabSize="mini"
        android:src="@drawable/ic_add_24dp"
        android:layout_above="@+id/android:list"
        android:layout_alignParentEnd="true" />

    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/items"-->
        <!--android:inputType="textMultiLine|textCapSentences"-->
        <!--android:layout_below="@+id/android:list"-->
        <!--android:minLines="1"/>-->

</RelativeLayout>
